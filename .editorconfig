# EditorConfig - 모든 에디터와 IDE에서 일관된 코딩 스타일 유지
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.py]
charset = utf-8
max_line_length = 100

[*.{js,jsx,ts,tsx,json}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.yml]
indent_size = 2

[*.{toml,ini}]
indent_size = 2

# Makefiles는 탭 사용
[Makefile]
indent_style = tab
